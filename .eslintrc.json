{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "tsconfigRootDir": "./",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint/eslint-plugin", "i18next", "unused-imports"],
  "extends": ["plugin:@typescript-eslint/recommended", "plugin:prettier/recommended", "plugin:i18next/recommended"],
  "root": true,
  "env": {
    "node": true,
    "jest": true
  },
  "rules": {
    "unused-imports/no-unused-imports": "error",

    "unused-imports/no-unused-vars": [
      "warn",
      { "varsIgnorePattern": "ignored", "args": "none", "argsIgnorePattern": "ignored" }
    ],
    "no-unused-vars": "off",
    "import/no-unresolved": "off",
    "import/prefer-default-export": "off",
    "no-unused-expressions": "warn",
    "react/require-default-props": "off",
    "react/react-in-jsx-scope": "off",
    "react/function-component-definition": "off",
    "no-shadow": "off",
    "import/no-extraneous-dependencies": "off",
    "no-underscore-dangle": "off",
    "i18next/no-literal-string": ["error", { "markupOnly": true, "ignoreAttribute": ["data-testid", "to"] }]
  },
  "overrides": [
    {
      "files": ["**/src/**/*.test.{ts,tsx}"],
      "rules": { "i18next/no-literal-string": "off" }
    }
  ]
}
